<%= render "header" %>
<div class="center">
  <div style="margin:50px;">
    <h1>Add a new rental request</h1>
    <a class="btn" href=<%=cats_url%>>Back to cats</a>
    </div>

    <form action="<%= cat_rental_requests_url %>" method="post" style="margin-top:30px;">
      <label for="start-date">Start Date</label>
      <input id="start-date" type="date" name="cat_rental_request[start_date]"><br><br>

      <label for="end-date">End Date</label>
      <input id="end-date" type="date" name="cat_rental_request[end_date]"><br><br>

      <label for="cat_id">Cat</label>
      <select id="cat_id" name="cat_rental_request[cat_id]">
        <option disabled selected>--- Please select a cat to rent ---</option>
        <%@cats.each do |cat|%>
          <option value="<%= cat.id %>"><%= cat.name %></option>
        <%end%>
      </select><br><br>

      <input type="submit" value="Submit rental request">
    </form>

</div>
