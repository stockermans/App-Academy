<div class="box center padding-top">
  <h2 class="purple">Add a new band</h2>
  <%= render 'shared/errors' %>
  <form class="form-width padding-top flex columns" action="<%= bands_url %>" method="POST">
    <%= auth_token %>
    <div class="flex space-between margin-bottom align-center">
      <label for="band_name">Band Name</label>
      <input type="text" name="band[name]" id="band_name">
    </div>
    <input class="menu-link" type="submit" value="Add new band">
  </form>
</div>