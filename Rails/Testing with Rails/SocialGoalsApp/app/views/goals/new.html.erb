<h1>New goal</h1>
<%= render 'shared/errors' %>

<form action="<%= goals_url %>" method="POST">
  <%= auth_token %>
    <label for="goal_title">Title</label>
    <input type="text" name="goal[title]" id="goal_title">
    <div>
      <label for="goal_description">Description</label>
      <textarea id="goal_description" name="goal[description]"></textarea>
    </div>
    <div>
      <input type="radio" id="is_public" name="goal[is_public]" value="true">
      <label for="is_public">Public</label>
      <input type="radio" id="is_private" name="goal[is_public]" value="false" checked>
      <label for="is_private">Private</label>
    </div>

  <input type="submit" value="Add Goal">
</form>
