<h1>Edit goal</h1>
<%= render 'shared/errors' %>

<form action="<%= goal_url(@goal.id) %>" method="POST">
  <%= auth_token %>
    <input type="hidden" name="_method" value="PATCH">
    <label for="goal_title">Title</label>
    <input type="text" name="goal[title]" id="goal_title" value="<%= @goal.title %>">
    <div>
      <label for="goal_description">Description</label>
      <textarea id="goal_description" name="goal[description]"><%= @goal.description %></textarea>
    </div>
    <div>
      <input type="radio" id="is_public" name="goal[is_public]" value="true" <%= @goal.is_public ? "checked" : ""%>>
      <label for="is_public">Public</label>
      <input type="radio" id="is_private" name="goal[is_public]" value="false" <%= !@goal.is_public ? "checked" : ""%>>
      <label for="is_private">Private</label>
    </div>
  <input type="submit" value="Update Goal">
</form>
